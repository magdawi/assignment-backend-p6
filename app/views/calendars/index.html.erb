<p id="notice"><%= notice %></p>

<h1>Listing Calendars</h1>

<table>
  <thead>
    <tr>
      <th>Period</th>
      <th>Sum income</th>
      <th>Sum outgoing</th>
      <th>Balance</th>
      <th>Pocket</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.period %></td>
        <td><%= calendar.sum_income %></td>
        <td><%= calendar.sum_outgoing %></td>
        <td><%= calendar.balance %></td>
        <td><%= calendar.pocket.name %></td>
        <td><%= calendar.user.name %></td>
        <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

